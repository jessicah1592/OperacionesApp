<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.RectanguloPage">

    <StackLayout Padding="20">
        <Label Text="Ingrese la base y la altura del rectángulo" FontSize="Medium" HorizontalOptions="Center" />
        <Entry x:Name="baseRectangulo" Placeholder="Base" Keyboard="Numeric" />
        <Entry x:Name="alturaRectangulo" Placeholder="Altura" Keyboard="Numeric" />

        <Button Text="Calcular Área" Clicked="CalcularAreaRectangulo" HorizontalOptions="Center" />

        <Label x:Name="resultadoRectangulo" FontSize="Medium" HorizontalOptions="Center" TextColor="Blue"/>

        <Button Text="Limpiar" Clicked="LimpiarRectangulo" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
