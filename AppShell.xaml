<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OperacionesApp"
    x:Class="OperacionesApp.AppShell">

    <!-- TabbedPage con tres pestañas para cada operación -->
    <TabBar>
        <Tab Title="Área del Cuadrado">
            <ShellContent ContentTemplate="{DataTemplate local:CuadradoPage}" />
        </Tab>
        <Tab Title="Área del Círculo">
            <ShellContent ContentTemplate="{DataTemplate local:CirculoPage}" />
        </Tab>
        <Tab Title="Área del Rectángulo">
            <ShellContent ContentTemplate="{DataTemplate local:RectanguloPage}" />
        </Tab>
    </TabBar>
</Shell>
