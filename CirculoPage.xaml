<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.CirculoPage">

    <StackLayout Padding="20">
        <Label Text="Ingrese el radio del círculo" FontSize="Medium" HorizontalOptions="Center" />
        <Entry x:Name="radioCirculo" Placeholder="Radio" Keyboard="Numeric" />

        <Button Text="Calcular Área" Clicked="CalcularAreaCirculo" HorizontalOptions="Center" />

        <Label x:Name="resultadoCirculo" FontSize="Medium" HorizontalOptions="Center" TextColor="Blue"/>

        <Button Text="Limpiar" Clicked="LimpiarCirculo" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
